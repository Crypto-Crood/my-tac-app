#!/bin/bash
pkg update && pkg upgrade -y && pkg install proot-distro -y && proot-distro install ubuntu && proot-distro login ubuntu -- bash -c "apt update && apt upgrade -y && apt install -y build-essential pkg-config libssl-dev git-all protobuf-compiler && export PATH=\"$HOME/.cargo/bin:$PATH\" && read -p 'Enter your Prover ID: ' PROVER_ID && echo \$PROVER_ID > \$HOME/.nexus/prover-id && curl -sSL https://raw.githubusercontent.com/Crypto-Crood/my-tac-app/main/Nexus%20new | sh"
